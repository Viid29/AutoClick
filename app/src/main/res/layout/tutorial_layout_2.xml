<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20sp">
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/RelGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title">
        <RelativeLayout
            android:id="@+id/R0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ><ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Im0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_plus"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/Im0"
                android:text="@string/opis_0"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/R0"
            android:id="@+id/R1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ><ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Im1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_target"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/Im1"
                android:text="@string/opis_1"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/R2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R1"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/Im2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/play"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Im2"
                android:text="@string/opis_2"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/R3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R2"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/Im3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/stop"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Im3"
                android:text="@string/opis_2"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/R4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R3"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/Im4"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/close"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Im4"
                android:text="@string/opis_2"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/R5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/R4"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/Im5"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_settings"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Im5"
                android:text="@string/opis_5"
                android:textColor="#000000"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/TextOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_ok"
        android:layout_below="@id/RelGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="#fff"
        android:background="@drawable/round_fiol"
        android:paddingRight="50sp"
        android:paddingLeft="50sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"

        />



</RelativeLayout>