<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_ads"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/AdsTitle1"
        android:layout_below="@id/Logo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/ads_title_1"
        android:gravity="center"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/AdsTitle2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/AdsTitle1"
        android:layout_centerHorizontal="true"
        android:text="@string/ads_title_2"
        android:gravity="center"
        android:alpha="0.4"
        android:textSize="13dp"
        />
    <RelativeLayout
        android:id="@+id/Rel1"
        android:layout_above="@id/StarvationStartTextView"
        android:layout_marginTop="10dp"
        android:layout_width="354dp"
        android:layout_height="212dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_ads_1_im"
        >

        <RelativeLayout
            android:layout_width="273dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            >
            <TextView
                android:id="@+id/Promo_1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="@string/ads_promo_1_1"
                android:textSize="12dp"
                android:textColor="#ffffff"/>

            <TextView
            android:id="@+id/Promo_2"
            android:layout_below="@id/Promo_1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="@string/ads_promo_1_2"
            android:textSize="12dp"
            android:textColor="#ffffff"/>

            <ImageView
                android:id="@+id/Image1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/Promo_1"
                android:src="@drawable/ic_galka"/>
            <ImageView
                android:id="@+id/Image2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/Promo_2"
                android:src="@drawable/ic_galka"/>

            
        </RelativeLayout>
        <TextView
            android:id="@+id/FreeTextView"
            android:layout_width="131dp"
            android:layout_height="40dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="40dp"
            android:text = "@string/free"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#ffffff"
            />
        <RelativeLayout
            android:id="@+id/SubRel"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:layout_marginTop="110dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            >

            <TextView
                android:id="@+id/TextFree2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/PriseTextView"
                android:layout_below="@id/TextFree2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:alpha="0.5"/>

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginBottom="30dp"
        android:id="@+id/StarvationStartTextView"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/round_blue"
        android:textColor="#ffffff"
        android:text="@string/proceed"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>